<h1>Edit Recipe</h1>
<form method="POST" action="/recipes/<%=@recipe.id%>">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label for="name">Recipe Name: </label>
    <input id="name" name="recipe[name]" type="text" value="<%=@recipe.name%>"/>
    <label for="ingredients">Ingredients: </label>
    <input id="ingredients" name="recipe[ingredients]" type="text value="<%=@recipe.ingredients%>""/>
    <label for="cook_time">Cook Time: </label>
    <input id="cook_time" name="recipe[cook_time]" type="text" value="<%=@recipe.cook_time%>"/>
    <input id="submit" type="submit" value="Create Recipe"/>
</form>